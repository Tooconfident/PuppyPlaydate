<h1><%= @dog.title %></h1>
<h2>By: <%= @dog.user.username %></h2>
<p><%= @dog.body %></p>
<% if allow_edit(@dog) %>
  <a href="/dogs/<%= @dog.id %>/edit">edit</a>
    <form class="template-delete button" action="/dogs/<%= @dog.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="delete dog" class="template-delete">
  </form>
<% end %>



