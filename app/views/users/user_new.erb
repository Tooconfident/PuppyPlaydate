<form action="/users" method="post">
  <div class="form-group">
    <label for="user_username">Username</label>
    <input type="text" class="form-control" name="user[username]" id="user_username" placeholder="batman">
  </div>

  <div class="form-group">
    <label for="user_first_name">First Name</label>
    <input type="text" class="form-control" name="user[first_name]" id="user_first_name" placeholder="bruce">
  </div>

  <div class="form-group">
    <label for="user_last_name">Last Name</label>
    <input type="text" class="form-control" name="user[last_name]" id="user_last_name" placeholder="wayne">
  </div>

  <div class="form-group">
    <label for="user_password">Password</label>
    <input type="password" class="form-control"  name="user[password]" id="user_password">
  </div>

  <button class="btn btn-info" type="submit">Register</button>
</form>
